<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- LIST VIEW (Odoo 18 uses list, not tree) -->
    <record id="view_piwikpro_config_list" model="ir.ui.view">
        <field name="name">piwikpro.config.list</field>
        <field name="model">piwikpro.config</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="container_url"/>
                <field name="container_id"/>
                <field name="purchase_event_name"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_piwikpro_config_form" model="ir.ui.view">
        <field name="name">piwikpro.config.form</field>
        <field name="model">piwikpro.config</field>
        <field name="arch" type="xml">
            <form string="Piwik PRO Configuration">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="active"/>
                    </group>

                    <group string="Container Settings">
                        <field name="container_url"/>
                        <field name="container_id"/>
                        <field name="data_layer_name"/>
                        <field name="purchase_event_name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
