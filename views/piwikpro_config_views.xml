<odoo>
    <record id="view_piwikpro_config_tree" model="ir.ui.view">
        <field name="name">piwikpro.config.tree</field>
        <field name="model">piwikpro.config</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="active"/>
                <field name="container_domain"/>
                <field name="container_id"/>
                <field name="data_layer_name"/>
                <field name="purchase_event_name"/>
            </tree>
        </field>
    </record>

    <record id="view_piwikpro_config_form" model="ir.ui.view">
        <field name="name">piwikpro.config.form</field>
        <field name="model">piwikpro.config</field>
        <field name="arch" type="xml">
            <form string="Piwik PRO Configuration">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="active"/>
                    </group>

                    <group string="Container">
                        <field name="container_domain" placeholder="moyeecoffee.containers.piwik.pro"/>
                        <field name="container_id" placeholder="5b868fbc-c24b-4102-8ea5-7669666a7699"/>
                        <field name="data_layer_name"/>
                        <field name="purchase_event_name"/>
                    </group>

                    <group string="Ecommerce Events">
                        <field name="enable_view_item"/>
                        <field name="enable_add_to_cart"/>
                        <field name="enable_view_cart"/>
                        <field name="enable_begin_checkout"/>
                        <field name="enable_purchase"/>
                    </group>

                    <group string="Privacy">
                        <field name="respect_dnt"/>
                    </group>

                    <group>
                        <label string="Notes"/>
                        <div class="text-muted">
                            <p>
                                After enabling, ensure your Piwik PRO Tag Manager has a Data Layer Event trigger
                                matching <b>purchase_event_name</b> (default: <b>piwik_order</b>).
                            </p>
                        </div>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
